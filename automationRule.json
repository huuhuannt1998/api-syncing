{
  "name": "shadowConn",
  "trigger": {
    "src": {
      "user": "U1",
      "platform": ["Smartthings"],
      "device": ""
    },
    "dst": {
      "user": "U2",
      "platform": ["Alexa"],
      "device": ""
    }
  },
  "condition": {
    "location": ["living room", "bedroom", "kitchen", "garage"],
    "time": ["00:00x", ["day", "night"]]
  },
  "decision": {
    "requester": "U2",
    "approver": "U1",
    "outcome": ["accept", "reject"]
  },
  "actions": [
    {
      "if": {
        "decision": "accept",
        "equals": {
          "left": {
            "device": {
              "deviceId": "a7940a66-f91c-4c51-a279-9d2a332fde91",
              "component": "main",
              "capability": "switch",
              "attribute": "switch"
            }
          },
          "right": {
            "string": "on"
          }
        },
        "then": [
          {
            "command": {
              "devices": ["a27770da-f4f9-48de-95cf-82948916b7f3"],
              "commands": [
                {
                  "component": "main",
                  "capability": "switch",
                  "command": "on"
                }
              ]
            }
          }
        ],
        "else": [
          {
            "command": {
              "devices": ["a27770da-f4f9-48de-95cf-82948916b7f3"],
              "commands": [
                {
                  "component": "main",
                  "capability": "switch",
                  "command": "off"
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
