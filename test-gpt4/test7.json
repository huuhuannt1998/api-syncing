{
    "name": "shadowConn",
    "trigger": {
      "src": {
        "user": "U1",
        "platform": ["Smartthings"],
        "device": "smart coffee maker"
      },
      "dst": {
        "user": "U2",
        "platform": ["Alexa"],
        "device": "smart coffee maker"
      }
    },
    "condition": {
      "location": ["kitchen"],
      "time": ["07:00", "day"]
    },
    "decision": {
      "requester": "U2",
      "approver": "U1",
      "outcome": ["accept"]
    },
    "actions": [
      {
        "if": {
          "decision": "accept",
          "equals": {
            "left": {
              "device": {
                "deviceId": "",
                "component": "main",
                "capability": "switch",
                "attribute": "switch"
              }
            },
            "right": {
              "string": "on"
            }
          },
          "then": [
            {
              "command": {
                "devices": [""],
                "commands": [
                  {
                    "component": "main",
                    "capability": "switch",
                    "command": "on"
                  }
                ]
              }
            }
          ],
          "else": [
            {
              "command": {
                "devices": [""],
                "commands": [
                  {
                    "component": "main",
                    "capability": "switch",
                    "command": "off"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }